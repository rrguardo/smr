
server {
	listen 80;
	listen [::]:80;
	server_name  api.4simple.org;
	location / { try_files $uri @flaskapp; }
	location @flaskapp {
		include uwsgi_params;
		uwsgi_pass unix:/tmp/flaskapp_uwsgi_api.sock;
	}

}


